  "dependencies": {
    "debug": "^4.1.1",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  },
  
  "scripts": {
    "test:agent": "DEBUG=agent:* nodemon --exec node --experimental-json-modules --experimental-top-level-await agent/**.test.mjs",
